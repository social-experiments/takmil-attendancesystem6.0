<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/school_name"
        android:layout_width="219dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:text="      School Name"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/teacher_name"
        app:layout_constraintEnd_toStartOf="@+id/edit_school_name"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_school_name"
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_teacher_name"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.963" />

    <TextView
        android:id="@+id/teacher_name"
        android:layout_width="219dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="12dp"
        android:text="Teacher Name"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/class_name"
        app:layout_constraintEnd_toStartOf="@+id/edit_teacher_name"
        app:layout_constraintHorizontal_bias="0.519"
        app:layout_constraintLeft_toLeftOf="@+id/school_name"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_teacher_name"
        android:layout_width="335dp"
        android:layout_height="44dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/edit_class_name"
        app:layout_constraintRight_toRightOf="parent" />


    <TextView
        android:id="@+id/class_name"
        android:layout_width="219dp"
        android:layout_height="38dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="40dp"
        android:text="Class Name"
        android:textSize="24dp"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintEnd_toStartOf="@+id/edit_class_name"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintStart_toStartOf="parent" />


    <EditText
        android:id="@+id/edit_class_name"
        android:layout_width="348dp"
        android:layout_height="41dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="36dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toTopOf="@+id/nextButton"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="325dp"
        android:layout_height="67dp"
        android:layout_marginStart="172dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="24dp"
        android:text="Next"
        android:textSize="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</android.support.constraint.ConstraintLayout>


    <!--app:layout_constraintTop_toTopOf="parent"-->